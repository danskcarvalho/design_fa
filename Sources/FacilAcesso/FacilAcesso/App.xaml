                    <ContentView local:EventBehavior.Tapped="{TemplateBinding ClosePopupCommand}" IsVisible="{TemplateBinding IsPopupVisible}" BackgroundColor="#7F000000" AbsoluteLayout.LayoutBounds="0,0,1,1" AbsoluteLayout.LayoutFlags="All">
                        <Frame CornerRadius="15" HorizontalOptions="Center" VerticalOptions="Center" Margin="30, 30, 30, 30" Padding="0">
                            <local:VScrollView VContent="{TemplateBinding PopupContent}"></local:VScrollView>
                        </Frame>
                    </ContentView>
                </AbsoluteLayout>
            </ControlTemplate>
        </ResourceDictionary>
    </Application.Resources>
</Application>