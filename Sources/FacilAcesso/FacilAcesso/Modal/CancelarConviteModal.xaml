<?xml version="1.0" encoding="UTF-8"?>
<local:VContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:FacilAcesso"
             x:Class="FacilAcesso.CancelarConviteModal">
    <StackLayout Margin="20">
        <Label Text="Cancelar convite" Style="{StaticResource TextoTitulo}" Margin="0,0,0,10" HorizontalTextAlignment="Center"></Label>
        <Label Style="{StaticResource TextoNormal}">
            <Label.FormattedText>
                <FormattedString>
                    <Span Text="Deseja realmente cancelar o convite enviado para "></Span>
                    <Span FontAttributes="Bold" Text="Mariana Martins, no Salvador Shopping Business, dia 20/09/18, da 09:00 às 12:00 hs?"></Span>
                </FormattedString>
            </Label.FormattedText>
        </Label>
        <Button Style="{StaticResource BotaoAzul}" Text="CANCELAR CONVITE" Margin="0,20,0,0"></Button>
    </StackLayout>
</local:VContentView>