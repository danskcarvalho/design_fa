<?xml version="1.0" encoding="UTF-8"?>
<local:VContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:local="clr-namespace:FacilAcesso"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FacilAcesso.FalhaPagamentoModal">
    <StackLayout Margin="20">
        <Label Text="Falha no pagamento" Style="{StaticResource TextoErro}" Margin="0,0,0,10" HorizontalTextAlignment="Center"></Label>
        <Label Text="O pagamento não foi autorizado no cartão cadastrado. É necessário o cadastro de um novo cartão de crédito." Style="{StaticResource TextoNormal}"></Label>
        <Button Style="{StaticResource BotaoVazado}" Text="CADASTRAR NOVO CARTÃO" Margin="0,20,0,0" Clicked="Button_Clicked"></Button>
    </StackLayout>
</local:VContentView>