<?xml version="1.0" encoding="utf-8" ?>
<local:VContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:FacilAcesso"
             x:Class="FacilAcesso.CriarContaPage"
             ControlTemplate="{StaticResource PaginaVazada}"
             NavigationPage.HasNavigationBar="False"
             Title="Criar Conta">
    <ScrollView>
        <StackLayout Margin="40" Spacing="5">
            <Label Style="{StaticResource TextoNormal}" Text="Olá!"></Label>
            <Label Style="{StaticResource TextoNormal}" Text="É importante que seu cadastro seja feito antes de aproveitar todos os nossos benefícios."></Label>
            <Frame Style="{StaticResource FrameComponentes}" Margin="0,20,0,0">
                <StackLayout Style="{StaticResource LayoutComponentes}">
                    <local:VEntry Placeholder="Nome completo" Style="{StaticResource Entry}"></local:VEntry>
                    <StackLayout Style="{StaticResource Separator}"></StackLayout>
                    <local:VDatePicker Placeholder="Data de Nascimento" Style="{StaticResource DatePicker}"></local:VDatePicker>
                    <StackLayout Style="{StaticResource Separator}"></StackLayout>
                    <local:VPicker Placeholder="Sexo" Style="{StaticResource Picker}"></local:VPicker>
                    <StackLayout Style="{StaticResource Separator}"></StackLayout>
                    <local:VEntry Placeholder="CPF" Style="{StaticResource Entry}"></local:VEntry>
                    <StackLayout Style="{StaticResource Separator}"></StackLayout>
                    <local:VEntry Placeholder="Senha" Style="{StaticResource Entry}" IsPassword="True"></local:VEntry>
                    <StackLayout Style="{StaticResource Separator}"></StackLayout>
                    <local:VEntry Placeholder="Confirmação de Senha" Style="{StaticResource Entry}" IsPassword="True"></local:VEntry>
                </StackLayout>
            </Frame>
            <Button Style="{StaticResource BotaoAzul}" Text="ENVIAR" Margin="0,20,0,0" Clicked="Button_Clicked"></Button>
        </StackLayout>
    </ScrollView>
</local:VContentPage>